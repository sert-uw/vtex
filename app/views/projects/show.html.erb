<h1><%= @open_file[:name] %></h1>

<%= form_tag project_files_path(@project, file: @open_file[:name]), remote: true, method: :put, id: 'update' do |f| %>
  <p><%= text_area_tag :content, @open_file[:content], class: "form-control", id: 'file_text_area', style: "min-width: 100%; margin-bottom: 60px" %></p>
  <%= submit_tag '保存', class: "btn btn-primary navbar-btn", id: "update_button", style: "display:none" %>
<% end %>

<div class="navbar navbar-default navbar-fixed-bottom">
  <div class="container-fluid">
    <div class="col-lg-offset-3 col-lg-4">
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
          <li><button type="button" class="btn btn-primary navbar-btn", id="pdf_update_under">PDF更新</button></li>
        </ul>
      </div>
    </div>
  </div>
</div>
